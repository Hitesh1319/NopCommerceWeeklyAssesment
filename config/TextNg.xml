<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="All Test Cases" verbose="1">
    <listeners>
        <listener class-name="NopCommerceDemo.Reports.Listeners"/>
    </listeners>

    <test name="Verify that user is able to add notebook to cart and checkout">
        <parameter name="browserName" value="Chrome"></parameter>
        <parameter name="testRunId1" value="TC-1"/>
        <classes>
            <class name="NopCommerceDemo.Test.VerifyThatUserIsAbleToAddNotebook"/>
        </classes>
    </test>

    <test name="Verify that user is able to add cell phone to cart and checkout">
        <parameter name="browserName" value="Chrome"></parameter>
        <parameter name="testRunId2" value="TC-2"/>
        <classes>
            <class name="NopCommerceDemo.Test.VerifyThatUserIsAbleToAddCellPhone"/>
        </classes>
    </test>

    <test name="Verify that user is able to add Camera to cart and checkout">
        <parameter name="browserName" value="Chrome"></parameter>
        <parameter name="testRunId3" value="TC-3"/>
        <classes>
            <class name="NopCommerceDemo.Test.VerifyThatUserIsAbleToAddCamera"/>
        </classes>
    </test>

    <test name="Verify that user is able to add shoes in cart and checkout">
        <parameter name="browserName" value="Chrome"></parameter>
        <parameter name="testRunId4" value="TC-4"/>
        <classes>
            <class name="NopCommerceDemo.Test.VerifyThatUserIsAbleToAddAnyShoes"/>
        </classes>
    </test>

</suite>